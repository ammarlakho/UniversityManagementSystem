<table class="table">
    <thead class="thead-dark">
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Department</th>
            <th>Designation</th>
            <th>Salary</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        <% for(var i=0; i<teachers.length; i++) { %> 
            <tr>
                <td><%= teachers[i].name %> </td>
                <td><%= teachers[i].email %></td>
                <td><%= teachers[i].department %></td>
                <td><%= teachers[i].designation %></td>
                <td><%= teachers[i].salary %></td>
                <td>
                    <a href="/update-teacher?id=<%= teachers[i]._id %>" class="btn border-shadow update">
                        <span class="text-gradient"><i class="fas fa-pencil-alt"></i></span>
                    </a>
                    <a class="btn border-shadow delete" data-id=<%= teachers[i]._id %>>
                        <span class="text-gradient"><i class="fas fa-times"></i></span>
                    </a>
                </td>
            </tr>
            
        <% } 
        %>
    </tbody>
</table>