<!-- form handling -->
<form action="/api/students" method="POST" id="add_student">
    <div class="new_user">
        <div class="form-group">
            <label for="name" class="text">Name</label>
            <input type="text" name="name" value="" placeholder="Ammar Lakho">
        </div>
        <div class="form-group">
            <label for="Email" class="text">Email</label>
            <input type="text" name="email" value="" placeholder="example@gmail.com">
        </div>

        <div class="form-group">
            <label for="Batch" class="text">Batch</label>
            <select id="batch">
                <option value="batch"> Select Batch</option>
                <option value="2018"> 2018</option>
                <option value="2019"> 2019</option>
                <option value="2020"> 2020</option>
                <option value="2021"> 2021</option>
                <option value="2022"> 2022</option>
                <option value="2023"> 2023</option>
                <option value="2024"> 2024</option>
                <option value="2025"> 2025</option>
                <option value="2026"> 2026</option>
            </select>
        </div>

        <div class="form-group">
            <label for="Program" class="text">Program</label>
            <form>
                BBA: <input type="radio" name = "status">
                BSCS: <input type="radio" name = "status">
                BSSS: <input type="radio" name = "status">
                BSECO: <input type="radio" name = "status">
                BSEM: <input type="radio" name = "status">
                BSACF: <input type="radio" name = "status">
            </form>
        </div>
        
        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>

    </div>
</form>