<!-- include header -->
<%- include('include/_header') %>
<!-- /include header -->

<!-- include tab -->
<%- include('include/_tab') %> 
<!-- /include header -->


  <!-- Main Site -->
  <main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
           <div class="filter">
               <a href="/courses" class="border-shadow">
                <span class="text-gradient route-link"><i class="fas fa-angle-double-left"></i> All courses
                </span>
            </a>
           </div>
        </div>

        <!-- add user form form handling -->
        <form action="/api/courses" method="POST" id="add_course">
            <div class="new_user">
                <div class="form-group">
                    <label for="title" class="text-light">Title</label>
                    <input type="hidden" name="teacher_id" value="<%= tid %>">
                    <input type="text" name="title" value="" placeholder="Database Systems">
                </div>
                <div class="form-group">
                    <label for="term" class="text-light">Term</label>
                    <input type="text" name="term" value="" placeholder="Fall 2020">
                </div>
                <div class="form-group">
                    <label for="Department" class="text-light">Department</label>
                    <input type="text" name="department" value="" placeholder="Computer Science">
                </div>
                <div class="form-group">
                    <button type="submit" class="btn text-dark update">Save</button>
                </div>

            </div>
        </form>
       
    </div>
</main>
<!-- /Main Site -->

<!-- include footer -->
<%- include('include/_footer') %>
<!-- /include footer -->

<script>
    var btn1 = document.getElementById('studentsBtn');
    var btn2 = document.getElementById('teachersBtn');
    var btn3 = document.getElementById('coursesBtn');

    btn3.style.color = "#06d6a0"
    btn2.style.color = "#2b2d42"
    btn1.style.color = "#2b2d42"
    btn3.style.borderBottomStyle = "solid"
    btn2.style.borderBottomStyle = "none"
    btn1.style.borderBottomStyle = "none"
    btn3.style.borderBottomWidth = "3px"
    
</script>
